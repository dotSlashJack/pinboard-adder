{
    "manifest_version": 2,
    "name": "Pinboard Saver",
    "version": "1.0",
    "description": "Add the current page to Pinboard with a single click.",
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "permissions": [
      "activeTab",
      "tabs"
    ],
    "browser_action": {
      "default_title": "Save to Pinboard",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png"
      }
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  